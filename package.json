{
	"name": "gulp-html-bemlinter",
	"description": "Gulp plugin for html linting using BEM methodology.",
	"version": "3.0.1",
	"license": "MIT",
	"author": {
		"name": "Sergey Artemov",
		"email": "firefoxic.dev@gmail.com"
	},
	"homepage": "https://github.com/firefoxic/gulp-html-bemlinter#readme",
	"bugs": {
		"url": "https://github.com/firefoxic/gulp-html-bemlinter/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:firefoxic/gulp-html-bemlinter.git"
	},
	"type": "module",
	"exports": "./lib/index.js",
	"files": [
		"./lib/"
	],
	"engines": {
		"node": "^18.12 || ^20.9"
	},
	"packageManager": "pnpm@9.1.0",
	"dependencies": {
		"chalk": "^5.3.0",
		"node-html-parser": "^6.1.13",
		"plugin-error": "^2.0.1",
		"through2": "^4.0.2"
	},
	"scripts": {
		"prepare": "husky",
		"lint": "eslint",
		"test": "node --test",
		"test:watch": "node --test --watch",
		"test:coverage": "node --test --experimental-test-coverage",
		"pretest": "pnpm lint",
		"preversion": "pnpm test",
		"version": "update-changelog && git add CHANGELOG.md",
		"postversion": "pnpm publish",
		"postpublish": "git push --follow-tags"
	},
	"devDependencies": {
		"@firefoxic/eslint-config": "^1.0.0",
		"@firefoxic/update-changelog": "^0.1.0",
		"eslint": "^9.2.0",
		"husky": "^9.0.11"
	},
	"keywords": [
		"gulpplugin",
		"html",
		"bem",
		"linter"
	]
}
