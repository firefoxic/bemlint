{
	"name": "@firefoxic/bemlint",
	"description": "CLI tool for linting HTML using BEM methodology.",
	"version": "5.0.1",
	"license": "MIT",
	"author": {
		"name": "Sergey Artemov",
		"email": "firefoxic.dev@gmail.com"
	},
	"homepage": "https://github.com/firefoxic/bemlint#readme",
	"bugs": {
		"url": "https://github.com/firefoxic/bemlint/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:firefoxic/bemlint.git"
	},
	"type": "module",
	"bin": {
		"bemlint": "./bin/cli.js"
	},
	"exports": "./lib/index.js",
	"files": [
		"./lib/"
	],
	"engines": {
		"node": ">=22.18"
	},
	"dependencies": {
		"node-html-parser": "^7.0.1"
	},
	"scripts": {
		"prepare": "git config core.hooksPath .githooks",
		"lint": "eslint",
		"test": "node --test",
		"test:watch": "node --test --watch",
		"test:coverage": "node --test --experimental-test-coverage",
		"pretest": "pnpm lint",
		"preversion": "pnpm test",
		"version": "update-changelog",
		"postversion": "pnpm publish --provenance --access public --no-git-checks",
		"postpublish": "git push --follow-tags"
	},
	"devDependencies": {
		"@firefoxic/eslint-config": "^5.0.0",
		"@firefoxic/update-changelog": "^1.0.0",
		"eslint": "^9.35.0"
	},
	"keywords": [
		"cli",
		"html",
		"bem",
		"linter",
		"bemlint"
	]
}
